<h1>id: <%= @task.user.name %> のタスクページ詳細ページ</h1>

    <div class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(@task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= @task.user.name %> <span class="text-muted">posted at <%= @task.created_at %></span>
        </div>
        <div>
          <p><%= @task.status%></p>    
          <p><%= @task.content %></p>
        </div>
      </div>
    </div>
  
